<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movie App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
    <style>
        .navbar {
            background-color: #3498db !important; /* Color azul claro */
            color: #fff;
        }

            .navbar a {
                color: #fff;
            }

                .navbar a:hover {
                    color: #ddd;
                }

        .navbar-brand {
            font-size: 1.5em;
        }

        .navbar-toggler {
            background-color: #fff;
        }

        .dropdown-menu {
            position: absolute !important; /* Asegura que el menú sea absoluto */
            background-color: #fff;
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
            z-index: 1000; /* Asegura que esté sobre otros elementos */
            width: auto; /* Ancho automático */
            left: 0; /* Alinea el menú a la izquierda */
        }

            .dropdown-menu a {
                color: #0000;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                .dropdown-menu a:hover {
                    background-color: #ddd;
                }

        .btn-circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: darkgrey; /* Color azul claro */
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            transition: background-color 0.3s ease;
            position: relative; /* Asegura el posicionamiento relativo */
            overflow: visible; /* Permite que el menú desplegable se muestre fuera del botón */
        }

            .btn-circle:hover {
                background-color: #2980b9; /* Color azul un poco más oscuro al pasar el mouse */
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Movies" style="color: white;" asp-action="Index">Movie App</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link text-light" href="#">Películas</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-controller="Cart" asp-action="Index" class="btn btn-primary">Carrito de compras</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Ingresar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Registrarse</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="btn-circle nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person"></i> <!-- Icono de persona usando Bootstrap Icons -->
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Ingresar</a></li>
                                <li><a class="dropdown-item" href="#">Registrarse</a></li>
                                <li><a class="dropdown-item" href="#">Carrito</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Movie App - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
