@model MvcMovie.Models.Pedido

<h2>Detalles del Pedido</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Nombre:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Detalles:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Detalles)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Total:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Index">Volver a la lista de pedidos</a>
</div>