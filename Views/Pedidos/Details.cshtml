@model Pedido

<h1>Detalles del Pedido</h1>
<p>Nombre: @Model.Nombre</p>
<p>Detalles: @Model.Detalles</p>
<p>Total: @Model.Total</p>

<form asp-action="Checkout" asp-controller="Payment" method="get">
    <input type="hidden" name="pedidoId" value="@Model.Id" />
    <button type="submit">Pagar</button>
</form>

<div>
    <a asp-action="Index">Volver a la lista de pedidos</a>
</div>