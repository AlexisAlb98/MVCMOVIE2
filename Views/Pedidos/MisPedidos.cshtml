@model IEnumerable<MvcMovie.Models.Pedido>
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Mis Pedidos";
}

<h2>Mis Pedidos</h2>

<table class="user-table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Detalles</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pedido in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => pedido.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => pedido.Detalles)</td>
                <td>@Html.DisplayFor(modelItem => pedido.Total)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@pedido.Id">Detalles</a>
                    @if (User.IsInRole("Administrador"))
                    {
                        <a asp-action="Edit" asp-route-id="@pedido.Id">Editar</a>
                        <a asp-action="Delete" asp-route-id="@pedido.Id">Eliminar</a>
                    }
                    <a asp-action="Checkout" asp-controller="Payment" method="get" asp-route-pedidoId="@pedido.Id">Pagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
