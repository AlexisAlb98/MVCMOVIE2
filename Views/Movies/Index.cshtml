@model IEnumerable<MvcMovie.Models.Movie>
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Inicio";
    var userRoles = ViewBag.UserRoles as IList<string>;
    bool isAdmin = userRoles != null && userRoles.Contains("Administrador");
}
<body style="background-color: #E9F1FA !important;">

    <h1 style="background-color: #0000 !important">Películas</h1>
    <p>
        @if (isAdmin)
        {
            <a asp-action="Create" class="btn btn-primary">Agregar nuevo producto</a>
        }
    </p>

    <form asp-controller="Movies" asp-action="Index" method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="buscar" class="form-control" placeholder="Buscar..." />
            <button class="btn btn-dark" type="submit">Buscar</button>
        </div>
    </form>

    <div class="row row-cols-1 row-cols-md-3 g-4">

        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@item.Image" class="card-img-top" alt="Movie Image" style="height: 300px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Genre</p>
                        <p class="card-text">@item.ReleaseDate?.ToString("d")</p>
                        <p class="card-text"><strong>@item.Price?.ToString("C")</strong></p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        @if (isAdmin)
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm ms-1">Eliminar</a>
                        }
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm ms-1">Detalles</a>
                        <form asp-action="AddToCart" asp-controller="Cart" method="post" style="display:inline;">
                            <input type="hidden" name="movieId" value="@item.Id" />
                            <button type="submit" class="btn btn-success btn-sm ms-1">Agregar al carrito</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    <style>
        .card {
            border: 1px solid #ccc;
            border-radius: 10px;
            transition: transform 0.2s;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
            }

        .bg-custom {
            background-image: url("~/Images/fondo_de_proyecto.jpg");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

    </style>
</body>
